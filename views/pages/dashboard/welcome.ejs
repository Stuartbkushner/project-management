<div id="welcome">
  <div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="project-tab" data-toggle="tab" href="#project" role="tab" aria-controls="project" aria-selected="false">Projects</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="grid-tab" data-toggle="tab" href="#grid" role="tab" aria-controls="grid" aria-selected="false">Grids</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tile-tab" data-toggle="tab" href="#tile" role="tab" aria-controls="tile" aria-selected="false">Tiles</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"></div>
      <div class="tab-pane fade" id="project" role="tabpanel" aria-labelledby="project-tab">
        <project-table id="project-table" :projects="projects"></project-table>
      </div>
      <div class="tab-pane fade" id="grid" role="tabpanel" aria-labelledby="grid-tab">
        <table id="grid-table">
          <thead>
            <tr>
              <th data-field="id">Grid ID</th>
              <th data-field="name">Grid Name</th>
            </tr>
          </thead>
          <tbody>
            <ul id="example-1">
              <li v-for="grid in grids">
                {{ grids }}
              </li>
            </ul>
          </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="tile" role="tabpanel" aria-labelledby="tile-tab">
        <table id="grid-table">
          <thead>
            <tr>
              <th data-field="id">Tile ID</th>
              <th data-field="name">Tile Name</th>
            </tr>
          </thead>
          <tbody>
            <ul id="example-1">
              <li v-for="tile in tiles">
                {{ tiles }}
              </li>
            </ul>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <router-view></router-view>

  
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
